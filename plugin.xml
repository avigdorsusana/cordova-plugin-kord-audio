<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="cordova-plugin-kord-audio" version="1.0.21">
      
    <name>KORDaudio</name>
    <author>Avigdor Susana and Frank Mendez</author>
	<description>KORD Audio</description>
    
	<license>MIT</license>
	<keywords></keywords>
    <repo>https://github.com/avigdorsusana/cordova-plugin-kord-audio.git</repo>
    <issue>https://github.com/avigdorsusana/cordova-plugin-kord-audio/issues</issue>

	<name>AudioPlayer</name>
    <description>Cordova Media Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,media</keywords>
    <repo>https://git-wip-us.apache.org/repos/asf/cordova-plugin-audioplayer.git</repo>
    <issue>https://github.com/phi-jp/cordova-plugin-audioplayer</issue>

	<js-module name="DeviceAudioService" src="www/kord.audio.js">
		<clobbers target="DeviceAudioService" />
	</js-module>

	<platform name="ios">
		<config-file parent="/*" target="config.xml">
			<feature name="DeviceAudioService">
				<param name="ios-package" value="DeviceAudioService" />
			</feature>
		</config-file>
		
		<header-file src="src/ios/kord.audio.h" />
        <source-file src="src/ios/kord.audio.m" />
		<header-file src="src/ios/kord.audio.item.h" />
        <source-file src="src/ios/kord.audio.item.m" />
	</platform>

	<platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="hello">
                <param name="android-package" value="com.playkord.kordaudio.hello"/>             
            </feature>
        </config-file>

        <source-file src="src/android/Hello.java" target-dir="src/com/playkord/kordaudio/hello" />        
    </platform>

    <!-- browser -->
    <!--<platform name="browser">
        <js-module name="NativeAudioBrowser" src="www/nativeaudio-browser.js">
            <clobbers target="cordova.plugins.NativeAudio" />
			<clobbers target="plugins.NativeAudio" />
		</js-module>
    </platform>-->

</plugin>